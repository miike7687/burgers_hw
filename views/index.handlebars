<div class="container">
  <div id="main">
    <h1>Eat-Da-Burger!</h1>
    <h2 id="intro"> If you're a carnivore and hungry for some unique burgers, you've come to the right spot!</h2>
    <hr>
  </div>



  <div class="row">

    <!-- burgers -->
    <div class="col-md-6">

      <!-- left column -->
      <h2 id="left">To Be Eaten...</h2>
      <p class="instructions">Click the button in this column to eat any burger in stock.</p>
      <ul>
        {{#each burgers}}

        {{#unless devoured}}
        {{> burgers/burger-block}}
        {{/unless}}


        {{/each}}
      </ul>

    </div> {{!-- left column --}}

    <div class="col-md-6">

      <!-- right column -->
      <h2 id="right">Already Devoured!</h2>
      <p class="instructions">Click the button in this
        column to order
        more
        of any burger out of stock. </p>
      <ul>

        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block}}
        {{/if}}


        {{/each}}
      </ul>
    </div> <!-- right column -->
  </div> {{!-- row --}}


  <hr>

  <form class="create-form">
    <h2 id="form-add">Add a Burger</h2>
    <p id="add-instructions">Don't see your favorite burger on the list? Add its name and ingredients to the menu!</p>
    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>
    <div class="form-group">
      <label for="cai">Ingredients:</label>
      <input type="text" id="cai" name="ingredients">
    </div>

    <div class="form-group">
      <label for="slee">Devoured?</label><br>
      <input type="radio" name="devoured" value="1" checked> Devoured!<br>
      <input type="radio" name="devoured" value="0"> Still Available
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div> <!-- container -->